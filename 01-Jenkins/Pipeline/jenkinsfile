node
{
  stage('Git-Checkout') {
   git 'https://github.com/Hyndavi09/QA.git'
  }
    
 def project_path="01-Jenkins/Code/petclinic"
 
 dir(project_path) {
   stage('Maven-Package') {
   sh label: '', script: 'mvn package'
  }
    stage('Docker-Stage-Deployment') {
   sh label: 'DOCKER DEPLOYMENT', script: 'docker-compose up -d --build'
  }
  
  
  stage('Pushing DockerImage to DockerHub') {
	  docker.withRegistry('', 'hyndavi-dockerhub' ) {
		    sh label: '', script: 'docker push hyndavi123/docker-test:$BUILD_NUMBER'
		  }
  }
  }
  stage('Production - Provisioning Approval') {
  	input "Start provisioning the production server?"
  }
  stage('Downstream Build -- Docker Deployment'){
	 build 'ProductionServer'
	}
  }
}
